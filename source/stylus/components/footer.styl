.footer
  background-color #fff
  &__container
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 20px 0
    +above($breakpoints.md)
      padding 30px 0
    +above($breakpoints.xxl)
      padding 44px 0 35px 0

  &__block
    display: none
    +above($breakpoints.sm)
      display: block
      color: #254665

  &__logo
    width 100px
    height: auto
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 140px
    +above($breakpoints.xxl)
      width 158px

  &__privacy
    color: #254665
    cursor pointer
    text-decoration: underline

  &__call-me
    display: none
    +above($breakpoints.sm)
      display: flex
      justify-content center
      align-items: center
      position relative
      z-index 1
      color: #6639B8
      border-radius: 25px
      cursor pointer
      width 200px
      height: 40px
    +above($breakpoints.md)
      width 270px
      height: 55px
    +above($breakpoints.xxl)
      width 282px
      height: 60px
    &:after
      content: ""
      position: absolute
      z-index -2
      background: linear-gradient(90deg, #6538B7, #AC79F2)
      box-shadow: 0 4px 10px 0 rgba(0, 0, 0, 0.2);
      border-radius: 25px
      top: -5px
      left: -5px
      bottom: -5px
      right: -5px
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color #fff
      border-radius: 20px
      width 100%
      height: 100%

  &__privacy-mobile
    color: #254665
    cursor pointer
    text-decoration: underline
    +above($breakpoints.sm)
      display: none

  &__phone-number-wrapper
    color: #6639B8
    cursor pointer
    +above($breakpoints.sm)
      display: none
