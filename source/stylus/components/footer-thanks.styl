.footer-thanks
  background-color #fff
  &__container
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 20px 0
    +above($breakpoints.md)
      padding 30px 0
    +above($breakpoints.xxl)
      padding 44px 0 35px 0

  &__block
    display: none
    +above($breakpoints.sm)
      display: block
      color: #254665

  &__logo
    width 100px
    height: auto
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 140px
    +above($breakpoints.xxl)
      width 158px

  &__privacy
    color: #254665
    cursor pointer
    text-decoration: underline

  &__privacy-mobile
    color: #254665
    cursor pointer
    text-decoration: underline
    +above($breakpoints.sm)
      display: none

  &__phone-number-wrapper
    color: #6639B8
    cursor pointer
