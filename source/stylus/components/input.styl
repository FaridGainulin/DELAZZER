.input
  height: 55px
  width 100%
  padding: 0 34px;
  font-family: 'OpenSans-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 120%
  color: #1D1625
  // border: 1px solid #000
  border-radius: 18px;
  background: #fff
  position relative
  overflow hidden

  &.active
    .input__progress
      opacity 1
      min-width: 40px
      span
        opacity 1
  &__progress
    position: absolute
    height: 100%
    top: 0
    left: 0
    background: #3D261B
    opacity 0
    min-width: 0
    display: flex
    align-items: center
    justify-content: center
    font-size: 16px
    line-height: 16px
    transition: min-width 1s, opacity 0.8s
    color: #fff
    font-weight: bold
    border-radius: 10px
    +above($breakpoints.xxl)
      font-size: 20px
      line-height: 20px
    span
      opacity 0
      transition: 2s

  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #6538B7
  &:focus
    // color: #3D261B
    caret-color: #6538B7
    // border 1px solid #91B77C
    box-shadow: 3px 3px 20px 0px #6538B7
    background: #fff
    &::placeholder
      color: #1D1625
  &::placeholder
    color: #1D1625
  +above($breakpoints.sm)
    border-radius: 25px
    height: 60px
    font-size: 14px;
  +above($breakpoints.md)
    height: 65px
    font-size: 16px;
  +above($breakpoints.xxl)
    font-size: 18px;
    height: 70px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    background: transparent
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

