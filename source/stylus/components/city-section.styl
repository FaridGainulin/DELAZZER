.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #966acd
  overflow hidden

  &__container
    position relative
    text-align: center
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      text-align: start
      padding 70px 0 60px 0
    +above($breakpoints.md)
      padding 90px 0 80px 0
    +above($breakpoints.xxl)
      padding 171px 0 136px 0

  &__title-first
    color transparent
    -webkit-text-stroke: 1px white
    +above($breakpoints.md)
      -webkit-text-stroke: 2px white

  &__sub-title
    padding 10px 0 10px 0
    display: flex
    align-items: center
    justify-content center
    gap: 5px
    +above($breakpoints.sm)
      align-items: flex-start
      justify-content start
      padding 30px 0 20px 0
      gap: 15px
    +above($breakpoints.md)
      padding 40px 0 30px 0
      gap: 20px
    +above($breakpoints.xxl)
      gap: 27px
      padding 30px 0 30px 0

  &__sub-title-icon
    width 40px
    height: auto
    +above($breakpoints.sm)
      width 60px
    +above($breakpoints.md)
      width 80px
    +above($breakpoints.xxl)
      width 102px

  &__bottom
    position relative
    z-index 1
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.2)
    border: 1px solid rgba(214, 214, 214, 0.15)
    border-radius: 15px
    width 100%
    +above($breakpoints.sm)
      width 573px
    +above($breakpoints.md)
      border-radius: 20px
      width 673px
    +above($breakpoints.xxl)
      width 873px
      height: 212px

  &__bottom-title
    width 100%
    position relative
    border-radius: 15px
    padding 15px 10px
    background-color #fff
    backdrop-filter: blur(20px)
    +above($breakpoints.sm)
      padding 20px 10px 15px 15px
    +above($breakpoints.md)
      border-radius: 20px
      padding 25px 10px 20px 24px
    +above($breakpoints.xxl)
      height: 82px
      padding 28px 10px 24px 34px

  &__bottom-icon
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width 144px
      height: auto
      bottom: 0
      right: 20px
    +above($breakpoints.md)
      width: 180px;
      right: 17px;
    +above($breakpoints.xxl)
      width 247px
      right: 29px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    padding 15px 10px
    +above($breakpoints.sm)
      flex-direction: row
      padding 15px 10px 20px 20px
    +above($breakpoints.md)
      padding 20px 10px 25px 24px
    +above($breakpoints.xxl)
      padding 25px 10px 35px 34px
    & :nth-child(1)
        width 280px !important
        +above($breakpoints.sm)
          width 150px !important
        +above($breakpoints.md)
          width 150px !important
        +above($breakpoints.xxl)
          width 201px !important
    & :nth-child(2)
        width 280px !important
        +above($breakpoints.sm)
          width 185px !important
        +above($breakpoints.md)
          width 200px !important
        +above($breakpoints.xxl)
          width 253px !important
    & :nth-child(3)
        width 280px !important
        +above($breakpoints.sm)
          width 180px !important
        +above($breakpoints.md)
          width 280px !important
        +above($breakpoints.xxl)
          width 316px !important

  &__img
    width 280px
    height: auto
    margin 20px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 583px;
      bottom: -47px;
      right: -310px;
    +above($breakpoints.md)
      width: 766px;
      right: -354px;
      bottom: -73px;
    +above($breakpoints.xxl)
      width: 1038px;
      right: -541px;
      bottom: -92px;
