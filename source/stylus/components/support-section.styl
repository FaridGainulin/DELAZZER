.support-section
  background-image: url('../images/support-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #e1d7f1

  &__container
    position relative
    text-align: center
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 70px 0 70px 0
    +above($breakpoints.xxl)
      padding 99px 0 93px 0

  &__sub-title
    padding 15px 0 20px 0
    position relative
    z-index 1
    +above($breakpoints.sm)
      padding 20px 0 50px 0
    +above($breakpoints.md)
      padding 25px 0 60px 0
    +above($breakpoints.xxl)
      padding 33px 0 74px 0
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #fff
      border-radius: 55px 90px 0 55px
      width: 224px;
      height: 20px;
      top: 11px;
      left: 43px;
      +above($breakpoints.sm)
        width: 337px;
        height: 33px;
        top: 12px;
        left: 198px;
      +above($breakpoints.md)
        width: 430px;
        height: 39px;
        top: 16px;
        left: 270px;
      +above($breakpoints.xxl)
        width 533px
        height: 55px
        top: 21px;
        left: 325px;

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content space-between
      gap: 30px 100px
    +above($breakpoints.md)
      gap: 50px 200px
    +above($breakpoints.xxl)
      gap: 60px 300px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    color: #532681
    +above($breakpoints.sm)
      width 215px !important
      gap: 15px
    +above($breakpoints.md)
      width 215px !important
      gap: 20px
    +above($breakpoints.xxl)
      width 215px !important
      height: 232px
      gap: 20px

  &__card-icon
    width 80px
    height: auto
    +above($breakpoints.sm)
      width 100px
    +above($breakpoints.md)
      width 120px
    +above($breakpoints.xxl)
      width 140px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    padding 10px
    backdrop-filter: blur(20px);
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(214, 214, 214, 0.15);
    border-radius: 15px
    +above($breakpoints.sm)
      margin-top 30px
      flex-direction: row
      justify-content center
      padding 20px 0 20px 0
    +above($breakpoints.md)
      margin-top 50px
      border-radius: 20px
      padding 25px 0 25px 0
    +above($breakpoints.xxl)
      margin 76px auto 0
      width 980px
      padding 36px 0 31px 0
    input
      width 280px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 280px !important
      +above($breakpoints.xxl)
        width 240px !important
    button
      width 280px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 280px !important
      +above($breakpoints.xxl)
        width 316px !important

  &__img
    width 280px
    height: auto
    margin 10px auto 0
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 350px;
      top: 205px;
      left: 50%
      transform: translateX(-50%)
    +above($breakpoints.md)
      width 462px
      top: 290px
    +above($breakpoints.xxl)
      width 562px
      top: 356px

  &__icon
    display: none
    +above($breakpoints.sm)
      display: block
      position: absolute
      width 32px
      height: auto
      left: 50%
      transform: translateX(-50%)
      top: 150px
    +above($breakpoints.md)
      width 38px
      top: 217px
    +above($breakpoints.xxl)
      width 43px
      top: 291px

.support-card-margin-left
  +above($breakpoints.sm)
    margin-left 50px
  +above($breakpoints.md)
    margin-left 70px
  +above($breakpoints.xxl)
    margin-left 100px
.support-card-margin-right
  +above($breakpoints.sm)
    margin-right 50px
  +above($breakpoints.md)
    margin-right 70px
  +above($breakpoints.xxl)
    margin-right 100px
